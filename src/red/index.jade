extends ../_layouts/base

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
  main.red
    section.red__hero
      .container
        .row
          .col-24.col-md-20.offset-md-2
            .red__hero__container
              h2.red__hero__title ¿Qué es RELIS?
    section.red__mision
      .container
        .row
          .col-24.col-md-8.offset-md-2
            .red__mision__container
              h4.red__mision__subtitle.-subtitle LA RED
              h3.red__mision__title.-title Misión
              p.red__mision__text.-text Promover la innovación socual desde y con el sector público en América Latina, así como fomentar la cooperación entre los miembros de la red, mediante la articulación de actores, mecanismos, conocimiento y mejores prácticas, que reconozcan a la innovación social como una herramienta para construir cambios positivos en la región.
      .red__mision__image
        .red__mision__wrapper
          img(src="/images/red/mision.jpg")
    section.red__vision
      .red__vision__ripped-background
        img(src="/images/red/ripped-top.png")      
      .container
        .row
          .col-24.col-md-20.offset-md-2
            .red__vision__container
              h3.red__vision__title.-title.-title--white Visión
              p.red__vision__text.-text.-text--white Ser una plataforma de diálogo y de construcción participativa, a través de la cual miembros del sector público puedan explorar, compartir y co-crear con otros actores mejores prácticas para la solución de problemáticas sociales, desde las diversas manifestaciones de la innovación social.
    section.red__objetivos
      .container
        .row
          .col-24.col-md-8.offset-md-14
            .red__objetivos__container
              h3.red__objetivos__title.-title Objetivos
